<h1>{{ title }}</h1>
<h1>{{ error }}</h1>
<div class="row">
  <div class="col-sm-6">
    <div class="card text-center">
      <div class="card-header"> Update Information </div>
        <form action="/update" method="post">
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                  <label for="title">ID</label>
                  <input type="text" class="form-control" placeholder="ID" name="id" required >
              </li>
              <li class="list-group-item">
                  <label for="title">Title</label>
                  <input type="text" class="form-control" placeholder="Title" name="title" required>
              </li>
              <li class="list-group-item">
                  <label for="title">Author</label>
                  <input type="text" class="form-control" placeholder="Author" name="author" required>
              </li>
              <li class="list-group-item">
                  <label for="content">Content</label>
                  <textarea class="form-control" placeholder="Content" name="content" required></textarea>
              </li>
              <li class="list-group-item">
                  <button type="button submit" class="btn btn-primary" class="mx-auto" >Update</button>
              </li>
          </ul> 
        </form>
    </div>
  </div>
  
  <div class="col-sm-6">
    <div class="card text-center">
      <div class="card-header"> Get Data </div>
        <ul class="list-group list-group-flush">
          {{# each items }}
            <li class="list-group-item">
              <article class="item">
                  <div>Title: {{ this.title }}</div>
                  <div>Content: {{ this.content }}</div>
                  <div>Author: {{ this.author }}</div>
                  <div>ID: {{ this._id }}</div>
              </article>
            </li>
          {{/each}}
          <li class="list-group-item">
            <a href="update/get-data">
              <button type="button" class="btn btn-warning" class="mx-auto">Get Data</button>
            </a>
          </li>
        </ul>
    </div>
  </div>
</div>